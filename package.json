{
  "name": "ru-bot",
  "version": "0.5.0",
  "description": "Telegram bot to manage spam and rules for @_ru community",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:code",
    "test:code": "nyc ava",
    "test:lint": "eslint src",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "dev": "cross-env DEBUG=rubot:*,telegraf:* nodemon -e yaml,js,json -w locales -w src ./src",
    "start": "NODE_ENV=production node src",
    "migrate": "sequelize db:migrate",
    "rollback": "sequelize db:migrate:undo",
    "prepush": "npm test",
    "precommit": "npm test --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LestaD/ru_bot.git"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "author": "Sergey Sova <i.am@lestad.net> (https://lestad.top)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LestaD/ru_bot/issues"
  },
  "homepage": "https://github.com/LestaD/ru_bot#readme",
  "devDependencies": {
    "@atomix/eslint-config": "^6.1.1",
    "ava": "^0.25.0",
    "codecov": "^3.0.2",
    "cross-env": "^5.1.5",
    "cz-customizable": "^5.2.0",
    "eslint": "^4.16.0",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "nodemon": "^1.14.11",
    "nyc": "^11.8.0",
    "sinon": "^5.0.7",
    "supports-color": "^5.1.0"
  },
  "dependencies": {
    "ajv": "^6.5.0",
    "debug": "3.1.0",
    "dotenv": "^5.0.1",
    "elasticsearch": "^15.0.0",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.32.2",
    "sequelize-cli": "^4.0.0",
    "telegraf": "^3.21.1"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "src/tests/**/*",
      "db/**/*",
      "node_modules/**/*",
      "config/**/*"
    ],
    "include": [
      "src/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
