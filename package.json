{
  "name": "ru-bot",
  "version": "0.6.0",
  "description": "Telegram bot to manage spam and rules for @_ru community",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:code",
    "test:code": "nyc ava",
    "test:lint": "eslint src",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "dev": "cross-env DEBUG=rubot:*,telegraf:* nodemon",
    "start": "NODE_ENV=production node src",
    "migrate": "sequelize db:migrate",
    "rollback": "sequelize db:migrate:undo",
    "prepush": "npm test",
    "precommit": "npm test --silent"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^5.1.0",
    "ajv": "^6.12.6",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "elasticsearch": "^16.7.1",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "ava": "^3.13.0",
    "codecov": "^3.8.0",
    "cross-env": "^7.0.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "prettier": "^2.1.2",
    "sinon": "^7.3.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "ava": {
    "files": [
      "src/**/*.test.js",
      "!data/**/*"
    ],
    "sources": [
      "src/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "data/**/*",
      "src/tests/**/*",
      "db/**/*",
      "node_modules/**/*",
      "config/**/*"
    ],
    "include": [
      "src/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true
  }
}
