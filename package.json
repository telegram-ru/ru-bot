{
  "name": "ru-bot",
  "version": "0.6.0",
  "description": "Telegram bot to manage spam and rules for @_ru community",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:code",
    "test:code": "nyc ava",
    "test:lint": "eslint src",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "dev": "DEBUG=rubot:*,telegraf:* nodemon -e yaml,js,json -w src ./src",
    "start": "NODE_ENV=production node src",
    "migrate": "sequelize db:migrate",
    "rollback": "sequelize db:migrate:undo",
    "prepush": "npm test",
    "precommit": "npm test --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LestaD/ru_bot.git"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "author": "Sergey Sova <i.am@lestad.net> (https://lestad.top)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LestaD/ru_bot/issues"
  },
  "homepage": "https://github.com/LestaD/ru_bot#readme",
  "devDependencies": {
    "@atomix/eslint-config": "^6.4.0",
    "ava": "^1.4.1",
    "codecov": "^3.3.0",
    "cz-customizable": "^6.0.0",
    "eslint": "^5.16.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "sinon": "^7.3.2"
  },
  "dependencies": {
    "@sentry/node": "^5.1.0",
    "ajv": "^6.10.0",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "elasticsearch": "^15.4.1",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.7.4",
    "sequelize-cli": "^5.4.0",
    "telegraf": "^3.29.0"
  },
  "ava": {
    "files": [
      "src/**/*.test.js",
      "!data/**/*"
    ],
    "sources": [
      "src/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "data/**/*",
      "src/tests/**/*",
      "db/**/*",
      "node_modules/**/*",
      "config/**/*"
    ],
    "include": [
      "src/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
